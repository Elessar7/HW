using System;

namespace Проект_3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите число");
            double n = Convert.ToDouble(Console.ReadLine());
            if ( n % 2 == 0)
            {
                Console.WriteLine($"Ваше число {n} - чётное ");

            }
            else
            {
                Console.WriteLine("Введённое число нечётное");
            }
        }
    }
}
